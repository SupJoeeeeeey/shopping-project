<view class="container">
    <view class="product-card">
        <image class="product-image" src="{{products[0].image}}" mode="widthFix"></image>
        <view class="product-detail">
            <view class="product-name">{{products[0].name}}</view>
            <view class="product-address">{{products[0].source}}</view>
        </view>
        <view class="product-price">
            <view class="product-unit">￥</view>
            <view class="product-number">{{products[0].price}}</view>
        </view>
    </view>

    <view class="product-info">
        <view class="product-service">
            <view class="product-service-detail">
            <image class="yellow-check" src='../../images/check-yellow.png'></image>
            7天免费发货
            </view>
            <view class="product-service-detail">
            <image class="yellow-check" src='../../images/check-yellow.png'></image>
            24小时内发货并配送运费险
            </view>
        </view>
        <image class="" src=""></image>
        <view class="product-rating">
        
        </view>
    </view>
</view>
